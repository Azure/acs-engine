{
   "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
   "contentVersion": "1.0.0.0",
   "parameters": {  
		"artifactsLocation": {
			"type": "string",
			"minLength": 1,
			"metadata": {
				"description": "Artifacts Location - URL"
			}
        },
		"apiVersionDefault": {
			"type": "string",
			"minLength": 1,
			"metadata": {
				"description": "Compute API Version"
			}
		},
		"masterVMNamePrefix": {
			"type": "string",
			"minLength": 1,
			"metadata": {
				"description": "Master VM Name Prefix"
			}
		},
		"extensionParameters": {
			"type": "securestring",
			"minLength": 1,
			"metadata": {
				"description": "Custom Parameter for Extension"
			}
		}
   },
   "variables": {  
		"singleQuote": "'",
		"initScriptUrl": "[concat(parameters('artifactsLocation'), 'extensions/helm-k8s/v1/helm-k8s.sh')]"
   },
   "resources": [  
	{
      "apiVersion": "[parameters('apiVersionDefault')]",
      "dependsOn": [],
      "location": "[resourceGroup().location]",
      "type": "Microsoft.Compute/virtualMachines/extensions",
	  "name": "[concat(parameters('masterVMNamePrefix'), '/cse0')]",
      "properties": {
        "publisher": "Microsoft.OSTCExtensions",
        "type": "CustomScriptForLinux",
        "typeHandlerVersion": "1.5",
        "autoUpgradeMinorVersion": true,
        "settings": {
			"fileUris": [ 
			   "[variables('initScriptUrl')]" 
			 ]
		},
        "protectedSettings": {
			"commandToExecute": "/bin/bash helm-k8s.sh >> /var/log/azure/helm.log"
        }
      }
    }
	],
   "outputs": {  }
}
